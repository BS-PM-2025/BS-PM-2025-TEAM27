pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/BS-PM-2025/BS-PM-2025-TEAM27.git'
      }
    }

    stage('Check Workspace') {
      steps {
        echo 'ğŸ“‚ Workspace contents:'
        sh 'ls -R'
      }
    }

    stage('Install Python Dependencies') {
      steps {
        echo 'ğŸ Installing backend dependencies...'
        sh '''
          pip install --upgrade pip
          pip install -r backend/requirements.txt
        '''
      }
    }

    stage('Run Backend Tests') {
      steps {
        echo 'ğŸ§ª Running backend unit tests...'
        sh '''
          python manage.py test accounts --settings=backend.settings
        '''
      }
    }

    stage('Install Frontend Dependencies') {
      steps {
        dir('frontend') {
          echo 'ğŸ“¦ Installing frontend dependencies...'
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          echo 'ğŸ”§ Building frontend...'
          sh 'npm run build'
        }
      }
    }

    stage('Archive Frontend Build') {
      steps {
        echo 'ğŸ—ƒï¸ Archiving frontend build...'
        archiveArtifacts artifacts: 'frontend/build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo 'âœ… All stages completed successfully!'
    }
    failure {
      echo 'âŒ Build failed. Please check logs.'
    }
    always {
      echo 'ğŸ§¹ Cleaning up workspace...'
    }
  }
}
