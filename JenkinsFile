pipeline {
  agent any

  environment {
    DJANGO_SECRET_KEY = credentials('django-secret-key')
    //REACT_APP_WEATHER_API_KEY = credentials('react-weather-api')
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/BS-PM-2025/BS-PM-2025-TEAM27.git'
      }
    }

    stage('Check Workspace Structure') {
      steps {
        echo 'üìÇ Printing workspace structure...'
        sh 'ls -R'
      }
    }

    stage('Backend Setup') {
      steps {
        sh '''
          /usr/bin/python3.11 -m venv venv
          . venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
        '''
      }
    }

    stage('Run Backend Tests') {
      steps {
        sh '''
          . venv/bin/activate
          python manage.py test
        '''
      }
    }

    stage('Frontend Setup') {
      steps {
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          sh 'npm run build'
        }
      }
    }

    stage('Archive Build') {
      steps {
        archiveArtifacts artifacts: 'frontend/build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    always {
      echo 'üßπ Cleaning up...'
    }
    success {
      echo '‚úÖ Build and tests passed!'
    }
    failure {
      echo '‚ùå Build failed. Check the logs.'
    }
  }
}
