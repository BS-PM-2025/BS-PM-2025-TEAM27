pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/BS-PM-2025/BS-PM-2025-TEAM27.git'
      }
    }

    stage('Check Workspace') {
      steps {
        echo '📂 Workspace contents:'
        sh 'ls -R'
      }
    }

    stage('Install Python Deps') {
      steps {
        echo '🐍 Installing backend dependencies...'
        sh '''
          pip install --upgrade pip
          pip install -r backend/requirements.txt
        '''
      }
    }

    stage('Run Backend Tests') {
      steps {
        echo '🧪 Running backend unit tests...'
        sh 'python manage.py test accounts --settings=backend.settings'
      }
    }

    stage('Install Frontend Deps') {
      steps {
        dir('frontend') {
          echo '📦 Installing frontend dependencies...'
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          echo '🛠️ Building frontend...'
          sh 'npm run build'
        }
      }
    }

    stage('Archive Frontend Build') {
      steps {
        echo '🗂️ Archiving frontend artifacts...'
        archiveArtifacts artifacts: 'frontend/build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo '✅ All stages passed. Build successful!'
    }
    failure {
      echo '❌ Build failed. Check logs.'
    }
    always {
      echo '🧹 Cleaning up workspace...'
    }
  }
}
