pipeline {
  agent any

  environment {
    DJANGO_SECRET_KEY = credentials('django-secret-key')
    REACT_APP_WEATHER_API_KEY = credentials('react-weather-api')
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/BS-PM-2025/BS-PM-2025-TEAM27.git'
      }
    }

    stage('Check Workspace Structure') {
      steps {
        echo '📂 Workspace contents:'
        sh 'ls -R'
      }
    }

    stage('Backend Setup') {
      steps {
        echo '🐍 Setting up virtual environment and installing backend dependencies...'
        sh '''#!/bin/bash
          python3 -m venv venv
          source venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
        '''
      }
    }

    stage('Run Backend Tests') {
      steps {
        echo '🧪 Running backend unit tests...'
        sh '''#!/bin/bash
          source venv/bin/activate
          python manage.py test
        '''
      }
    }

    stage('Frontend Setup') {
      steps {
        dir('frontend') {
          echo '📦 Installing frontend dependencies...'
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          echo '🔧 Building React frontend...'
          sh 'npm run build'
        }
      }
    }

    stage('Archive Frontend Build') {
      steps {
        echo '🗃️ Archiving built frontend files...'
        archiveArtifacts artifacts: 'frontend/build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    always {
      echo '🧹 Cleaning up workspace...'
    }
    success {
      echo '✅ All stages completed successfully!'
    }
    failure {
      echo '❌ Build failed. Check logs above for details.'
    }
  }
}
