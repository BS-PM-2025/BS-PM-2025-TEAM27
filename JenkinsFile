pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/BS-PM-2025/BS-PM-2025-TEAM27.git'
      }
    }

    stage('Check Workspace') {
      steps {
        echo 'ğŸ“‚ Listing workspace files...'
        sh 'ls -la'
      }
    }

    stage('Install Python Dependencies') {
      steps {
        echo 'ğŸ Installing backend dependencies...'
        sh '''
          python3 -m pip install --upgrade pip
          python3 -m pip install -r requirements.txt
        '''
      }
    }

    stage('Run Django Tests') {
      steps {
        echo 'ğŸ§ª Running Django unit tests...'
        sh '''
          python3 manage.py test accounts --settings=backend.settings
        '''
      }
    }

    stage('Install Frontend Dependencies') {
      steps {
        dir('frontend') {
          echo 'ğŸ“¦ Installing frontend dependencies...'
          sh '/usr/bin/npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          echo 'ğŸ› ï¸ Building frontend...'
          sh '/usr/bin/npm run build'
        }
      }
    }

    stage('Archive Frontend Build') {
      steps {
        echo 'ğŸ—‚ï¸ Archiving frontend artifacts...'
        archiveArtifacts artifacts: 'frontend/build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo 'âœ… Build and test pipeline completed successfully!'
    }
    failure {
      echo 'âŒ Build failed. Check logs for errors.'
    }
    always {
      echo 'ğŸ§¹ Finished pipeline execution.'
    }
  }
}
