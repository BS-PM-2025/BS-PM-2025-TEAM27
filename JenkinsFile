pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/BS-PM-2025/BS-PM-2025-TEAM27.git'
      }
    }

    stage('Check Workspace') {
      steps {
        echo 'ğŸ“‚ Workspace contents:'
        sh 'ls -R'
      }
    }

    stage('Install Python Deps') {
      steps {
        echo 'ğŸ Installing backend dependencies...'
        sh '''
          pip install --upgrade pip
          pip install -r backend/requirements.txt
        '''
      }
    }

    stage('Run Backend Tests') {
      steps {
        echo 'ğŸ§ª Running backend unit tests...'
        sh 'python manage.py test accounts --settings=backend.settings'
      }
    }

    stage('Install Frontend Deps') {
      steps {
        dir('frontend') {
          echo 'ğŸ“¦ Installing frontend dependencies...'
          sh 'npm install'
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          echo 'ğŸ› ï¸ Building frontend...'
          sh 'npm run build'
        }
      }
    }

    stage('Archive Frontend Build') {
      steps {
        echo 'ğŸ—‚ï¸ Archiving frontend artifacts...'
        archiveArtifacts artifacts: 'frontend/build/**', allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo 'âœ… All stages passed. Build successful!'
    }
    failure {
      echo 'âŒ Build failed. Check logs.'
    }
    always {
      echo 'ğŸ§¹ Cleaning up workspace...'
    }
  }
}
